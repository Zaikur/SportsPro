@model Incident
@{
    string title = ViewBag.Action + " Incident";
    ViewData["Title"] = title;

    <h2>@ViewBag.Title</h2>

    <form asp-action="Edit" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>


        <div class="form-group">
            <label asp-for="CustomerID">Customer</label>
            <select asp-for="CustomerID" 
                asp-items="@(new SelectList(ViewBag.Customers, "CustomerID", "FullName")
                    .Prepend(new SelectListItem { Value = "", Text = "Select a Customer", Selected = true }))" 
                    class="form-control"></select>
            <span asp-validation-for="CustomerID" class="text-danger"></span>

        </div>
        
        

        <div class="form-group">
            <label asp-for="ProductID">Product</label>
            <select asp-for="ProductID" asp-items="@(new SelectList(ViewBag.Products, "ProductID", "Name")
                .Prepend(new SelectListItem { Value = "", Text = "Select a Product", Selected = true }))" 
                class="form-control"></select>
            <span asp-validation-for="ProductID" class="text-danger"></span>
        </div>

        
        <div class="form-group">
            <label asp-for="Title">Title</label>
            <input asp-for="Title" class="form-control">
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description">Description</label>
            <input asp-for="Description" class="form-control">
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>


        <div class="form-group">
            <label asp-for="TechnicianID">Technician</label>
            <select asp-for="TechnicianID" asp-items="@(new SelectList(ViewBag.Technicians, "TechnicianID", "Name")
                .Prepend(new SelectListItem { Value = "", Text = "Select a Technician", Selected = true }))" 
                class="form-control"></select>
            <span asp-validation-for="TechnicianID" class="text-danger"></span>
        </div>


        <div class="form-group">
            <label asp-for="DateOpened" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="DateOpened" class="form-control" type="datetime-local" />
                <span asp-validation-for="DateOpened" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="DateClosed" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="DateClosed" class="form-control" type="datetime-local" />
                <span asp-validation-for="DateClosed" class="text-danger"></span>
            </div>
        </div>

        <input type="hidden" asp-for="IncidentID" />
        <br>
       
        <button type="submit" class="btn btn-primary">@ViewBag.Action</button>
        <a asp-action="List" class="btn btn-primary">Cancel</a>



    </form>
}
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>