@model CustomerViewModel
@{
    ViewData["Title"] = "Registrations";
}

<h1>Get Customer</h1>
<form asp-action="GetCustomer" method="post">
    <div class="form-group">
        <label asp-for="SelectedCustomerId">Customer</label>
        <select asp-for="SelectedCustomerId" class="form-control">
            <option value="">Select a customer</option>
            @foreach (var customer in Model.Customers)
            {
                <option value="@customer.CustomerID">@customer.FullName</option>
            }
        </select>
        <span asp-validation-for="SelectedCustomerId" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        <input type="submit" value="Select" class="btn btn-primary" />
    </div>
</form>

@section scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
