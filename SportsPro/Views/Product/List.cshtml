    Page to list all of the products from the database
*@

@model List<Product>
@{
    ViewData["Title"] = "Product Manager";
}

<h1>Product Manager</h1>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Code</th>
            <th>Name</th>
            <th>Price</th>
            <th>Release Date</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ProductCode</td>
                <td>@product.Name</td>
                <td>@product.YearlyPrice.ToString("C")</td>
                <td>@product.ReleaseDate.ToString("d")</td>
                <td>
                    <a asp-controller="Product" asp-action="Edit" class="btn btn-primary"
                       asp-route-id="@product.ProductID">Edit</a>
                </td>
                <td>
                    <a asp-controller="Product" asp-action="Delete" class="btn btn-primary"
                       asp-route-id="@product.ProductID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-2">
    <a asp-controller="Product" asp-action="Add" class="btn btn-primary">Add Product</a>
</div>